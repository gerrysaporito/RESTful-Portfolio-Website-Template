<% include ../partials/header %>
<link rel="stylesheet" type="text/css" href="/stylesheets/createEdit.css">
</head>
<body>
<% include ../partials/navbar %>

<div class="cont">
  <div class="row">
      <h1 style="text-align: center">Edit <%= workExperience.company %></h1>
      <div style="width: 30%; margin: 25px auto;">
        <form action="/edit/work-experiences/<%= workExperience._id %>?_method=PUT" method="POST">
            <div class="form-group">
              <input class="form-control" type="text" name="work_experience[company]" placeholder="Company" value="<%= workExperience.company %>" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="work_experience[date]" placeholder="Date" value="<%= workExperience.date %>" required>
              </div>
            <div class="form-group">
                <input class="form-control" type="text" name="work_experience[position]" placeholder="Position Title" value="<%= workExperience.position %>" required>
            </div>
            <div class="form-group">
                <textarea class="form-control" name="work_experience[description]" placeholder="Job Description" rows="15" required><%= workExperience.description %></textarea>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="work_experience[link]" placeholder='Link to Company (Include "https://")' value="<%= workExperience.link %>" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="work_experience[image]" placeholder='Company Logo Image Source (350x200px, Include "https://")' value="<%= workExperience.image %>" required>
            </div>
            <div class="form-group">
              <button class="btn btn-lg btn-primary btn-block">Edit</button>
            </div>
        </form>
        <a href="/edit/work-experiences">Go Back</a>
      </div>
  </div>
</div>
