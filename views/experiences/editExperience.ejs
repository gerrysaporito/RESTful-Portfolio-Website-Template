<% include ../partials/header %>
<link rel="stylesheet" type="text/css" href="/stylesheets/createEdit.css">
</head>
<body>
<% include ../partials/navbar %>

<div class="cont">
  <div class="row">
      <h1 style="text-align: center">Edit <%= experience.name %></h1>
      <div style="width: 30%; margin: 25px auto;">
        <form action="/edit/experiences/<%= experience._id %>?_method=PUT" method="POST">
          <div class="form-group">
            <input class="form-control" type="text" name="experience[name]" placeholder="Experience Name" value="<%= experience.name %>" required>
          </div>
          <div class="form-group">
              <input class="form-control" type="text" name="experience[sub]" placeholder="Sub Header (if applicable)" value="<%= experience.sub %>" required>
            </div>
          <div class="form-group">
              <textarea class="form-control" name="experience[description]" placeholder="Description" rows="15" required><%= experience.description %></textarea>
          </div>
          <div class="form-group">
              <input class="form-control" type="text" name="experience[link]" placeholder='Link to Experience (if applicable)' value="<%= experience.link %>"required>
          </div>
          <div class="form-group">
              <input class="form-control" type="text" name="experience[image]" placeholder='Image Source (350x200px, Include "https://")' value="<%= experience.image %> required">
          </div>
          <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Edit</button>
          </div>
        </form>
        <a href="/edit/experiences">Go Back</a>
      </div>
  </div>
</div>
